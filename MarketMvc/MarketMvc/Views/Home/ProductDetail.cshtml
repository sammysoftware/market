@model NorthwindEntitiesLib.Product
@{
    ViewData["Title"] = "Product Detail - " + Model.ProductName;
}
<h2>Product Detail</h2>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>Product ID</dt>
        <dd>@Model.ProductID</dd>
        <dt>Product Name</dt>
        <dd>@Model.ProductName</dd>
        <dt>Category</dt>
        <dd>@Model.Category.CategoryName</dd>
        <dt>Unit Price</dt>
        <dd>@Model.UnitPrice.Value.ToString("C")</dd>
        <dt>Units In Stock</dt>
        <dd>@Model.UnitsInStock</dd>
        <dt>Shopping Cart</dt>
        <dd><a asp-controller="cart" asp-action="buy" asp-route-id="@Model.ProductID">Add to cart</a></dd>
    </dl>
</div>

<div>
    <a asp-action="Index">Back to Product List</a>
</div>