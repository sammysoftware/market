@model IEnumerable<MarketMvc.Entities.Product>
@{
    ViewData["Title"] =
      "Products That Cost More Than " + ViewData["MaxPrice"];
}
<h2>Products That Cost More Than @ViewData["MaxPrice"]</h2>
<table class="table">
    <tr>
        <th>Product Name</th>
        <th>Category Name</th>
        <th>Supplier's Company Name</th>
        <th>Unit Price</th>
        <th>Units In Stock</th>
        <th>Shopping Cart</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier.CompanyName)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitsInStock)
        </td>
        <td>
            <a asp-controller="cart" asp-action="buy" asp-route-id="@item.ProductID">Add to cart</a>
        </td>
    </tr>
    }
</table>

<div>
    <a asp-action="Index">Back to Product List</a>
</div>